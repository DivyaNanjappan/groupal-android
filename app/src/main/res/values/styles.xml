<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- App Load Theme-->
    <style name="Theme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_centered</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--App Background-->
    <style name="AppBackground">
        <item name="android:background">@color/colorAppBackground</item>
    </style>

    <!--App Font-->
    <style name="AppFont">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="AppFontBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="AppFontMedium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <!--Button styles-->
    <style name="ButtonPrimary" parent="AppFont">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_selector_primary</item>
    </style>

    <style name="ButtonSecondary" parent="AppFont">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_selector_rounded</item>
    </style>

    <!--TextView Normal styles-->
    <style name="AppText" parent="AppFont">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTextLight" parent="AppFont">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTextPrimary" parent="AppFont">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTextOrange" parent="AppFontBold">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTextMedium" parent="AppFontMedium">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTextLarge" parent="AppFontMedium">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTextSmall" parent="AppFont">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InputTextStyleSearch" parent="AppFont">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/edit_text_bg</item>
    </style>

    <!--CardView Styles-->
    <style name="CardStyle" parent="CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

</resources>
